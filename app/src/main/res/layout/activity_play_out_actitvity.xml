<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayOutActitvity">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >


       <ImageButton
           android:id="@+id/button5"
           android:layout_width="32dp"
           android:layout_height="32dp"
           android:scaleType="centerCrop"
           android:layout_marginStart="28dp"
           android:layout_marginTop="24dp"
           android:background="@android:color/transparent"

           android:src="@drawable/icon__12_"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="56dp"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:text="Edit"
        android:textColor="@color/text_color"
android:layout_marginTop="-10dp"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="407dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"

        android:background="@drawable/profileheadtextshape"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView25">

        <TextView

            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="6dp"
            android:text="Name"
            android:textSize="19sp" />

        <EditText

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Name"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="407dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/profileheadtextshape"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView25">

        <TextView

            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="6dp"
            android:text="Address"
            android:textSize="19sp" />

        <EditText

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="address"
            android:inputType="textMultiLine"
            android:paddingStart="7dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="407dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/profileheadtextshape"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView25">

        <TextView

            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="6dp"
            android:text="Phone Number"
            android:textSize="17sp" />

        <EditText

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Phone Number"
            android:inputType="text|textPhonetic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="407dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/profileheadtextshape"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView25">

        <TextView

            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="6dp"
            android:text="Payement Metod"
            android:textSize="17sp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/congratution"

            />

    </LinearLayout>

       <LinearLayout
           android:layout_width="407dp"
           android:layout_height="68dp"
           android:layout_marginTop="16dp"
           android:background="@drawable/profileheadtextshape"
           android:gravity="center_vertical"
           android:orientation="horizontal"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/textView25">

           <TextView

               android:layout_width="80dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:paddingLeft="6dp"
               android:text="Total Amaount"
               android:textSize="18sp" />

           <EditText

               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:background="@android:color/transparent"
               android:ems="10"
               android:gravity="center_vertical|end"
               android:hint="$5"
               android:inputType="text"
               android:paddingEnd="40dp"
               android:textColor="@color/text_color"
               android:textColorHint="@color/text_color"
               android:textSize="20sp" />
       </LinearLayout>


   </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/placemyorder"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Place My Order"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:background="@drawable/profileheadtextshape"
android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="16dp"
android:layout_marginRight="16dp"
        />
</FrameLayout>